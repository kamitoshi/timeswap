<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h2>新規登録</h2>

      <ul id="myTab" class="nav nav-tabs" role="tablist">
        <li class="nav-item" role="presentation">
          <a href="#person" id="person-tab" class="nav-link active" role="tab" data-toggle="tab" aria-controls="person" aria-selected="true">個人</a>
        </li>
        <li class="nav-item" role="presentation">
          <a href="#company" id="company-tab" class="nav-link" role="tab" data-toggle="tab" aria-controls="company" aria-selected="false">店舗</a>
        </li>
      </ul>

      <!-- パネル部分 -->
      <div id="myTabContent" class="tab-content mt-3">
        <div id="person" class="tab-pane active" role="tabpanel" aria-labelledby="person-tab">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :person, value: true %>

            <div class="field">
              <%= f.label :name, "氏名" %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
            </div>

            <div class="field">
              <%= f.label :kana_name, "カナ氏名" %><br />
              <%= f.text_field :kana_name, autofocus: true, autocomplete: "kana_name", class:"form-control" %>
            </div>

            <div class="field">
              <%= f.label :sex, "性別" %><br />
              <%= f.radio_button :sex, :men %>
              <%= f.label :sex, "男性", {value: :men, style: "display: inline-block;"} %>
              <%= f.radio_button :sex, :women %>
              <%= f.label :sex, "女性", {value: :women, style: "display: inline-block;"} %>
              <%= f.radio_button :sex, :others %>
              <%= f.label :sex, "その他", {value: :others, style: "display: inline-block;"} %>
            </div>

            <div class="field">
              <%= f.label :birthday, "生年月日" %><br />
              <%= f.date_field :birthday, autofocus: true, autocomplete: "birthday", class:"form-control" %>
            </div>

            <div class="field">
              <%= f.label :phone_number, "電話番号（ハイフンなし）" %><br />
              <%= f.number_field :phone_number, autofocus: true, autocomplete: "phone_number", class:"form-control" %>
            </div>

            <div class="field">
              <%= f.label :email, "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
            </div>

            <div class="field">
              <%= f.label :introduction, "自己紹介文" %><br />
              <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class:"form-control" %>
            </div>

            <div class="field">
              <%= f.label :image, "プロフィール画像" %><br />
              <%= f.file_field :image, autofocus: true, autocomplete: "image" %>
            </div>

            <div class="field">
              <%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "パスワード確認" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "新規登録" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>

        <div id="company" class="tab-pane" role="tabpanel" aria-labelledby="company-tab">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :person, value: false %>

            <div class="field">
              <%= f.label :name, "店名" %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
            </div>

            <div class="field">
              <%= f.label :kana_name, "カナ店名" %><br />
              <%= f.text_field :kana_name, autofocus: true, autocomplete: "kana_name" %>
            </div>

            <div class="field">
              <%= f.label :birthday, "開店年月日" %><br />
              <%= f.date_field :birthday, autofocus: true, autocomplete: "birthday" %>
            </div>

            <div class="field">
              <%= f.label :phone_number, "電話番号（ハイフンなし）" %><br />
              <%= f.number_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
            </div>

            <div class="field">
              <%= f.label :email, "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label :introduction, "店紹介文" %><br />
              <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
            </div>

            <div class="field">
              <%= f.label :image, "プロフィール画像" %><br />
              <%= f.file_field :image, autofocus: true, autocomplete: "image" %>
            </div>

            <div class="field">
              <%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "パスワード確認" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="actions">
              <%= f.submit "新規登録" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>

      </div>
    </div>
  </div>
</div>
